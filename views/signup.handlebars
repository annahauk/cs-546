{{! Handlebars for the signup page }}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/main.css">
</head>
<div class="navbar">
	<a href="/">Home</a>
</div>
<h1>GitMatches</h1>
{{#if error}}
	<p class="error" id="error">{{error}}</p>
{{else}}
	<p class="error" id="error"></p>
{{/if}}
<form action="/auth/register" method="POST" id="signup-form" name="signup-form">
	<label for="username">Username:</label>
	<input type="text" id="username" name="username" />
	<label for="password">Password:</label>
	<input type="password" id="password" name="password" />
	<label for="confirmPass">Confirm Password:</label>
	<input type="password" id="confirmPass" name="confirmPass" />
	<input type="submit" value="Sign Up" />
</form>
<a class="centered-link" href="/auth/login">Have an account? Login here!</a>
<script src="/public/js/loginRegisterVal.js"></script>