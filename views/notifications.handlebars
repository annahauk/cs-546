{{! Handlebars for the notifications page }}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/notifications.css">
</head>
{{> navbar}}
<div class="container">
    {{#if user.notifications}}
        <div class="leftSide">
            <h2>Unresolved Notifications</h2>
            <ol>
                {{#each user.notifications}}
                    {{#unless this.resolved}}
                        <li class="notif">
                            <h3>{{this.title}}</h3>
                            <p>{{this.content}}</p>
                            <p>Origin: {{this.origin}}</p>
                            <p>Time: {{this.time}}</p>
                            <!-- if notification requires action, show approve, deny and text field as form -->
                            {{#if this.requiresApproval}}
                                <p>Approve or Deny this application</p>
                                <!-- approve | posts to /projects/:id/join/:appId/approve -->
                                <form method="POST" isFriendRequest="{{this.acceptedFriend}}" class="notif-application-descision" referenceFriendRequest="{{this.referenceFriendRequest}}" referenceProject="{{this.projectId}}" referenceApplication="{{this.referenceApplication}}" referenceNotification="{{this._id}}" action="">
                                    <button type="submit">Approve</button>
                                    <button type="submit">Deny</button>
                                    {{#unless this.acceptedFriend}}
                                    <input type="text">
                                    {{/unless}}
                                </form>
                            {{/if}}
                            <p class="unresolved">Status: Unresolved</p>
                            <form method="POST" action="/notifications/resolve/{{this._id}}">
                                <button type="submit" class="resolve-btn">Mark as Resolved</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="rightSide">
            <h2>Resolved Notifications</h2>
            <ol>
                {{#each user.notifications}}
                    {{#if this.resolved}}
                        <li class="notif">
                            <h3>{{this.title}}</h3>
                            <p>{{this.content}}</p>
                            <p>Origin: {{this.origin}}</p>
                            <p>Time: {{this.time}}</p>
                            <p class="resolved">Status: Resolved</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    {{else}}
        <p>You have no notifications!</p>
    {{/if}}
</div>
<script src="/public/js/notifications.js"></script>