{{! Handlebars for the login page }}
<head>
	<link rel="stylesheet" href="/public/css/main.css">
</head>

<!-- add textured background -->
<div class="coolahhbg"></div>

<div class="navbar">
	<div class="nav-left">
		<a href="/"><img src="../public/LogoB.png" class="logo" alt="GitMatches Logo"/></a>
		<a href="/" class="brand-text">GitMatches</a>
	</div>
	<a href="/">Home</a>
</div>

<h1>GitMatches</h1>
{{#if error}}
	<p class="error" id="error">{{error}}</p>
{{else}}
	<p class="error" id="error"></p>
{{/if}}
<form action="/auth/login" method="POST" id="signin-form" name="signin-form">
	<label for="username">Username:</label>
	<input type="text" id="username" name="username" />
	<label for="password">Password:</label>
	<input type="password" id="password" name="password" />
	<input type="submit" value="Login" />
</form>

<a class="centered-link" href="/auth/register">Don't have an account? Join here!</a>
<script src="/public/js/loginRegisterVal.js"></script>